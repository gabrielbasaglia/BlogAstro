---
import BaseLayout from "../../layouts/BaseLayout.astro";
const todasPostagens = await Astro.glob("../postagens/*.md");
const tags = [...new Set(todasPostagens.map((post) => post.frontmatter.tags).flat())]
const tituloPagina = "√çndice de Tags";
---

<BaseLayout tituloPagina = {tituloPagina}>
	<div class="tags">
    {tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
</BaseLayout>

<style>
  a {
    color: #00539F;
		text-decoration: none;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
		
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
		
  }
</style>
